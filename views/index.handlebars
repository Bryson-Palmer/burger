{{!-- Main Content --}}
<main class="container-fluid d-flex flex-column align-items-center burger-main">

    <!-- Vertically centered modal -->
    <div class="container d-flex flex-column">
        <h1 id="bjjTitle">BJJ's Burgers</h1>
        <!-- Button trigger modal -->
        <button type="button" class="belt-btn animate__animated animate__rubberBand" data-bs-toggle="modal" data-bs-target="#burgerModal">
            <img src="../assets/images/RedBelt.png" alt="BJJ red belt">
        </button>
        <p class="tap-it">Tap it!</p>

        <!-- Modal -->
        <div class="modal fade" id="burgerModal" tabindex="-1" aria-labelledby="#burgerModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content burger-mission">
                    <div class="modal-header burger-header">
                        <h3 class="modal-title" id="burgerModalLabel">Submit to the best burgers in town!</h3>
                        <button type="button" class="btn-close mb-5" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>Tap out your hunger with the classic Americana. Or go big with Tripple Flying
                            Triangle. At BJJ's Burgers we grapple with only the freshest ingredients. All you have to do
                            is <span>bump,
                                slap, and tap</span> that burger.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {{!-- Add a Burger Submission --}}
    <section class="burger-box">
        {{!-- Title --}}
        <h2 class="burger-title">Add a Burger Submission</h2>
        {{!-- Formm --}}
        <form class="create-burger">

            {{!-- Add a Burger label and input --}}
            <div class="burger-data">
                <label class="new-label" for="brgr">Create a new <span>BJJ</span> Burger</label>
                <input class="new-input" type="text" id="brgr" name="title">
            </div>

            {{!-- Add a Burger label and radio buttons --}}
            <div class="burger-data">
                <div class="radio-btn">
                    <label for="devoured">Are you hungry?</label><br>
                    <input type="radio" name="devoured" value="0" checked> So hungry!<br>
                    <input type="radio" name="devoured" value="1"> I'm all tapped out!
                </div>
                {{!-- Submit Burger Button --}}
                <button class="sbmt-btn" type="submit">Submit Burger</button>
            </div>

        </form>
    </section>

    {{!-- Container for Contenders and Tapped Out --}}
    <div class="status-box">
        <div class="status-inner">
            {{!-- Title and Text --}}
            <h2 class="status-title">Contenders</h2>
            <p class="status-text">These burgers still need to be tapped out.</p>

            {{!-- List of Burgers in Contenders --}}
            <ul class="burger-list">
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devouring=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="status-inner">
            {{!-- Title and Text --}}
            <h2 class="status-title">Tapped Out</h2>
            <p class="status-text">These burgers have been devoured.</p>

            {{!-- List of Burgers in Tapped Out --}}
            <ul class="burger-list">
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devouring=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</main>